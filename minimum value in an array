// find the minimum value in an array

#include <stdio.h>

int main() {
    int arr[] = {12, 45, 3, 22, 18, 5};
    int n = sizeof(arr) ;
    int min = arr[0]; 

    for (int i = 1; i < n; i++) {
        if (arr[i] < min) {
            min = arr[i]; 
        }
    }

    printf("Minimum value in the array is: %d\n", min);
    return 0;
}
